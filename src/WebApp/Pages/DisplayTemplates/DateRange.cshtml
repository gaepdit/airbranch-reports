@using WebApp.Platform.Formatting
@using Domain
@model Domain.ValueObjects.DateRange

@if (Model.EndDate is null && Model.StartDate == default)
{
    @GlobalConstants.ConfidentialInfoPlaceholder
}
else if (Model.EndDate is null || Model.EndDate == Model.StartDate)
{
    @Model.StartDate.ToString(DisplayFormats.LongDate)
}
else
{
    @string.Join($" {ViewData["Connector"] ?? "to"} ", Model.StartDate.ToString(DisplayFormats.LongDate), Model.EndDate.ToString(DisplayFormats.LongDate))
}