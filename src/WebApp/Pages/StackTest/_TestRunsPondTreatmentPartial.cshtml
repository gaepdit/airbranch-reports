@model Domain.StackTest.Models.StackTestReportPondTreatment
@using Domain.StackTest.Models.TestRun
@{
    if (Model!.TestRuns is not { Count: > 0 }) return;
    var firstTestRun = Model.TestRuns.FirstOrDefault()!;
}

<table class="table-subtable-vertical">
    <thead>
        <tr>
            <th scope="row">@Html.DisplayNameFor(m => firstTestRun.RunNumber)</th>
            @foreach (var r in Model.TestRuns)
            {
                <th scope="col">@r.RunNumber</th>
            }
            <th scope="col">Average</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">@Html.DisplayNameFor(m => firstTestRun.PollutantCollectionRate) (@Model.AvgPollutantCollectionRate.Units)</th>
            @foreach (var r in Model.TestRuns)
            {
                <td>@r.PollutantCollectionRate</td>
            }
            <td>@Model.AvgPollutantCollectionRate.Value</td>
        </tr>
        <tr>
            <th scope="row">@Html.DisplayNameFor(m => firstTestRun.TreatmentRate) (@Model.AvgTreatmentRate.Units)</th>
            @foreach (var r in Model.TestRuns)
            {
                <td>@r.TreatmentRate</td>
            }
            <td>@Model.AvgTreatmentRate.Value</td>
        </tr>
    </tbody>
</table>
