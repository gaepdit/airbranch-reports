@model Domain.Monitoring.Models.StackTestReportFlare
@using Domain.Monitoring.Models.StackTestData
@if (Model!.TestRuns is not { Count: > 0 }) return;

<table class="table-subtable-vertical">
    <thead>
        <tr>
            <th scope="row">@Html.DisplayNameFor(m => m.TestRuns.FirstOrDefault().RunNumber)</th>
            @foreach (FlareTestRun r in Model.TestRuns)
            {
                <th scope="col">@r.RunNumber</th>
            }
            <th scope="col">Average</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>@Html.DisplayNameFor(m => m.TestRuns.FirstOrDefault().HeatingValue) (@Model.AvgHeatingValue.Units)</th>
            @foreach (FlareTestRun r in Model.TestRuns)
            {
                <td>@r.HeatingValue</td>
            }
            <td>@Model.AvgHeatingValue.Value</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(m => m.TestRuns.FirstOrDefault().EmissionRateVelocity) (@Model.AvgEmissionRateVelocity.Units)</th>
            @foreach (FlareTestRun r in Model.TestRuns)
            {
                <td>@r.EmissionRateVelocity</td>
            }
            <td>@Model.AvgEmissionRateVelocity.Value</td>
        </tr>
    </tbody>
</table>
