@model List<Notification>
@using Domain.Compliance.Models.WorkItems

<h2>Notifications</h2>

@{
    if (Model is not { Count: > 0 })
    {
        <div class="fce-content">None.</div>
        return;
    }

    var firstItem = Model.FirstOrDefault()!;
}

<table class="">
    <thead>
        <tr>
            <th scope="col" class="no-wrap">@Html.DisplayNameFor(m => firstItem.Id)</th>
            <th scope="col">@Html.DisplayNameFor(m => firstItem.DateReceived)</th>
            <th scope="col">@Html.DisplayNameFor(m => firstItem.Reviewer)</th>
            <th scope="col">@Html.DisplayNameFor(m => firstItem.Type)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <th scope="row" rowspan="2">@i.Id</th>
                <td>@Html.DisplayFor(m => i.DateReceived)</td>
                <td>@i.Reviewer.SortableFullName</td>
                <td>@i.Type</td>
            </tr>
            <tr>
                <td colspan="3">
                    <dl class="dl-inline">
                        <dt>@Html.DisplayNameFor(m => firstItem.Comments)</dt>
                        <dd>@i.Comments</dd>
                    </dl>
                </td>
            </tr>
        }
    </tbody>
</table>
