@model Domain.Organization.Models.OrganizationInfo
<div role="banner" class="grid">
    <div class="grid__item">
        <img class="logo" src="~/img/epd-logo.svg" alt="Georgia Environmental Protection Division" />
    </div>
    <div class="grid__item grid__item_right">
        <address class="inside-address">
            <div class="director">@Model.NameOfDirector, Director</div>
            <div class="branch">@Model.Org</div>
            <div class="address">
                @Model.OrgAddress.Street<br />
                @if (Model.OrgAddress.Street2 is not null)
                {
                    @Model.OrgAddress.Street2
                    <br />
                }
                @Model.OrgAddress.City, @Model.OrgAddress.State @Model.OrgAddress.PostalCode<br />
                @Model.OrgPhoneNumber
            </div>
        </address>
    </div>
</div>