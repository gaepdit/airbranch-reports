@using WebApp.Platform.Formatting
@model WebApp.Platform.Models.MemoHeader
<header class="memorandum">
    <h1>Memorandum</h1>
    <dl>
        @if (Model.Date != null)
        {
            <dt>Date:</dt>
            <dd>@Model.Date.ToString(DisplayFormats.LongDate)</dd>
        }
        @if (Model.To != null)
        {
            <dt>To:</dt>
            <dd>@Model.To</dd>
        }
        @if (Model.Through != null)
        {
            <dt>Through:</dt>
            <dd>@Model.Through</dd>
        }
        @if (Model.From != null)
        {
            <dt>From:</dt>
            <dd>@Model.From</dd>
        }
        @if (Model.Subject != null)
        {
            <dt>Subject:</dt>
            <dd class="preserve-linebreaks">@Model.Subject</dd>
        }
    </dl>
</header>